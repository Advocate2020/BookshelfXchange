@inherits LayoutComponentBase

<link href="styles/LandingLayout.css" rel="stylesheet" />
<div id="app">
    <nav class="navbar navbar-expand-md navbar-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand mr-0 mr-md-2 d-flex align-items-center" href="/" aria-label="BookshelfXChange">
                <svg class="d-block" width="36" height="36" viewBox="0 0 612 612" xmlns="http://www.w3.org/2000/svg" focusable="false">
                    <title>BookshelfXChange</title>
                    <path fill="currentColor" d="M510 8a94.3 94.3 0 0 1 94 94v408a94.3 94.3 0 0 1-94 94H102a94.3 94.3 0 0 1-94-94V102a94.3 94.3 0 0 1 94-94h408m0-8H102C45.9 0 0 45.9 0 102v408c0 56.1 45.9 102 102 102h408c56.1 0 102-45.9 102-102V102C612 45.9 566.1 0 510 0z"></path>
                    <path fill="currentColor" d="M196.77 471.5V154.43h124.15c54.27 0 91 31.64 91 79.1 0 33-24.17 63.72-54.71 69.21v1.76c43.07 5.49 70.75 35.82 70.75 78 0 55.81-40 89-107.45 89zm39.55-180.4h63.28c46.8 0 72.29-18.68 72.29-53 0-31.42-21.53-48.78-60-48.78h-75.57zm78.22 145.46c47.68 0 72.73-19.34 72.73-56s-25.93-55.37-76.46-55.37h-74.49v111.4z"></path>
                </svg>
                <span class="ml-0"><b>ookshelfXChange</b></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="{{ __('Toggle navigation') }}">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left Side Of Navbar -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span aria-hidden="true"></span> Home
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="#">
                            <span aria-hidden="true"></span> About Us
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="#">
                            <span aria-hidden="true"></span> FAQ
                        </NavLink>                       
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="#">
                            <span aria-hidden="true"></span> Contact Us
                        </NavLink>                        
                    </li>
                </ul>

                <!-- Right Side Of Navbar -->
                <ul class="navbar-nav ms-auto">
                    <!-- Authentication Links -->
                    <li class="nav-item dropdown">
                        <a class="nav-item nav-link dropdown-toggle mr-md-2" role="button" data-toggle="dropdown" aria-expanded="false">
                            <AuthorizeView>
                                <Authorized>
                                  @context.User.Identity?.Name<i class="bi bi-person-fill"></i>
                                </Authorized>
                                <NotAuthorized>
                                  <i class="bi bi-lock-fill"></i>
                                </NotAuthorized>
                            </AuthorizeView>
                            
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                           <AuthorizeView>
                               <Authorized>
                                  <a class="dropdown-item" href="/sign-out">Sign Out</a>
                               </Authorized>
                               <NotAuthorized>
                                    <a class="dropdown-item" href="/sign-in">Sign In</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/sign-up">Sign Up</a>
                               </NotAuthorized>
                           </AuthorizeView>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main style="height:90vh">
        @Body
       
    </main
    <footer class="text-center text-white" style="background-color: #6f42c1;">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: CTA -->
            <section class="">
                <p class="d-flex justify-content-center align-items-center">
                    <span class="me-3">Register for free</span>
                    <button type="button" class="btn btn-outline-light btn-rounded">
                        Sign up!
                    </button>
                </p>
            </section>
            <!-- Section: CTA -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: #6610f2">
            © 2024 Copyright:
            <a class="text-white" href="#">BookshelfXChange.com</a>
        </div>
        <!-- Copyright -->
    </footer>

</div>
