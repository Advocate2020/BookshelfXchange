@page "/admin"
@using BookshelfXchange.Middleware
@inject NavigationManager NavigationManager
<PageTitle>BXC | Admin Dashboard</PageTitle>


    
<AuthorizeView>
    <Authorized>
        <h1>Hello, world!</h1>

        <p>Welcome to your new app.</p>
    </Authorized>
    <NotAuthorized>
        @{
            var returnUrl =
            NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

            <LoginRedirect ReturnUrl="@returnUrl" />
        }
        
    </NotAuthorized>
</AuthorizeView>    



